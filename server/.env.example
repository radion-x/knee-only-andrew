# Environment variables for Spine IQ Server

# Port for the backend server to run on
# Changed from 3889 to 3000 for Traefik direct routing
SERVER_PORT=3000

# Your Claude API Key - KEEP THIS SECRET AND NEVER COMMIT .env FILE TO GIT
CLAUDE_API_KEY=""

# MongoDB Connection String
MONGODB_URI="mongodb://localhost:27017/knee_iq_db"

# Mailgun API Configuration
MAILGUN_API_KEY=""
MAILGUN_DOMAIN="mg.yourdomain.com"

# Email addresses
EMAIL_SENDER_ADDRESS="noreply@yourdomain.com"
EMAIL_RECIPIENT_ADDRESS="doctor@yourdomain.com"
BCC_EMAIL_RECIPIENT_ADDRESS="admin@yourdomain.com"

# Dashboard Password
DASHBOARD_PASSWORD="Gumtr33s22!"

# Session Secret (for express-session) - Generate with: openssl rand -base64 32
SESSION_SECRET=""

# Server Base URL (for constructing public links to uploaded files)
SERVER_BASE_URL="https://api.yourdomain.com"

# CORS Configuration - Frontend domains allowed to access API (comma-separated)
ALLOWED_ORIGINS="https://app.yourdomain.com,https://yourdomain.com"

# Cookie Configuration (use .domain.com for subdomain support)
COOKIE_DOMAIN=".yourdomain.com"

# Proxy Configuration (REQUIRED for Coolify/Traefik)
TRUST_PROXY=true
